{
  "name": "kitledger-tools",
  "description": "Toolkit for interacting with instances of the Kitledger platform",
  "keywords": [
    "cli",
    "sdk",
    "tools",
    "platform",
    "scripting",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "github.com/kitledger/tools"
  },
  "license": "Apache-2.0",
  "author": "Alejandro Barrera Aponte <abarreraaponte@icloud.com>",
  "type": "module",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "bun run build:actions && bun run build:cli && bun run build:sdk && bun run build:query",
    "build:actions": "bun run --cwd ./packages/actions build",
    "build:cli": "bun run --cwd ./packages/cli build",
    "build:sdk": "bun run --cwd ./packages/sdk build",
    "build:query": "bun run --cwd ./packages/query build"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/bun": "latest"
  },
  "dependencies": {
    "valibot": "^1.1.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
